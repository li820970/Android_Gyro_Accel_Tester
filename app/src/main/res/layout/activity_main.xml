<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mag_X Placeholder"
        android:id="@+id/mag_x"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mag_Y Placeholder"
        android:id="@+id/mag_y"
        android:layout_below="@+id/mag_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mag_Z Placeholder"
        android:id="@+id/mag_z"
        android:layout_below="@+id/mag_y"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Magnet-thingy"
        android:id="@+id/mag_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="Enable Logging"
        android:textOn= "Logging..."
        android:id="@+id/toggleButton_Logging"
        android:checked="false"
        android:onClick="loggingToggle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Accelerometer"
        android:id="@+id/accel_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accel_X Placeholder"
        android:id="@+id/accel_x"
        android:layout_alignTop="@+id/mag_x"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accel_Y Placeholder"
        android:id="@+id/accel_y"
        android:layout_alignTop="@+id/mag_y"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accel_Z Placeholder"
        android:id="@+id/accel_z"
        android:layout_alignTop="@+id/mag_z"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gravityToggle"
        android:textOff="Filter Gravity"
        android:textOn= "Filtering Gravity..."
        android:id="@+id/toggleButton_Gravity"
        android:checked="false"
        android:layout_below="@+id/accel_z"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10dp"
        android:layout_alignLeft="@+id/accel_label"
        android:layout_alignStart="@+id/accel_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gyroscope"
        android:id="@+id/gyro_label"
        android:layout_alignBottom="@+id/toggleButton_Gravity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gyro_X Placeholder"
        android:id="@+id/gyro_x"
        android:layout_below="@+id/gyro_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gyro_Y Placeholder"
        android:id="@+id/gyro_y"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gyro_x"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="P2pFindPeers"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gyro_Z Placeholder"
        android:id="@+id/gyro_z"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gyro_y"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Peers"
        android:id="@+id/button_PeerDisc"
        android:layout_below="@+id/gyro_z"
        android:layout_alignLeft="@+id/toggleButton_Gravity"
        android:layout_alignStart="@+id/toggleButton_Gravity"
        android:layout_alignRight="@+id/toggleButton_Gravity"
        android:layout_alignEnd="@+id/toggleButton_Gravity" />
    <!--USE THIS^ WITH NESTED LINEAR LAYOUT LATER-->

</RelativeLayout>
